{
  "name": "graphone",
  "version": "0.1.7",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "npm --prefix apps/desktop/web run dev --",
    "build": "npm --prefix apps/desktop/web run build",
    "preview": "npm --prefix apps/desktop/web run preview",
    "check": "npm --prefix apps/desktop/web run check",
    "check:watch": "npm --prefix apps/desktop/web run check:watch",
    "check:repo": "node tooling/scripts/check-repository-guardrails.mjs",
    "size:sidecar": "node tooling/scripts/report-sidecar-size.mjs --target=all",
    "size:sidecar:linux": "node tooling/scripts/report-sidecar-size.mjs --target=linux",
    "size:sidecar:windows": "node tooling/scripts/report-sidecar-size.mjs --target=windows",
    "build:sidecar": "node tooling/scripts/build-sidecar-only.mjs --target=all && npm run size:sidecar",
    "build:sidecar:linux": "node tooling/scripts/build-sidecar-only.mjs --target=linux && npm run size:sidecar:linux",
    "build:sidecar:windows": "node tooling/scripts/build-sidecar-only.mjs --target=windows && npm run size:sidecar:windows",
    "tauri": "tauri",
    "dev:linux": "tauri dev",
    "dev:windows": "bash -c 'source ~/.cargo/env && npm run tauri dev -- --target x86_64-pc-windows-msvc --runner cargo-xwin'",
    "build:windows:exe": "bash -c 'source ~/.cargo/env && npm run tauri build -- --target x86_64-pc-windows-msvc --runner cargo-xwin --no-bundle' && npm run size:sidecar:windows",
    "build:windows:portable": "npm run build:windows:exe && bash tooling/scripts/stage-windows-portable.sh",
    "build:windows:debug:exe": "bash -c 'source ~/.cargo/env && npm run tauri build -- --debug --target x86_64-pc-windows-msvc --runner cargo-xwin --no-bundle'",
    "build:windows:debug:portable": "npm run build:windows:debug:exe && bash tooling/scripts/stage-windows-portable.sh x86_64-pc-windows-msvc debug",
    "build:linux": "tauri build && npm run size:sidecar:linux",
    "build:windows": "bash -c 'source ~/.cargo/env && npm run tauri build -- --target x86_64-pc-windows-msvc --runner cargo-xwin' && npm run size:sidecar:windows",
    "build:all": "npm run build:linux && npm run build:windows",
    "clean": "cargo clean --manifest-path src-tauri/Cargo.toml && rm -rf src-tauri/binaries services/agent-host/dist apps/desktop/web/build apps/desktop/web/.svelte-kit",
    "run:windows": "bash tooling/scripts/run-windows.sh",
    "format": "npm run format:svelte && npm run format:ts && npm run format:md && npm run format:rust",
    "format:svelte": "prettier --write 'apps/desktop/web/src/**/*.svelte'",
    "format:ts": "prettier --write 'apps/desktop/web/src/**/*.ts' 'services/agent-host/src/**/*.ts'",
    "format:md": "prettier --write --no-error-on-unmatched-pattern '*.md' 'docs/**/*.md'",
    "format:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "format:check": "prettier --check --no-error-on-unmatched-pattern 'apps/desktop/web/src/**/*.svelte' 'apps/desktop/web/src/**/*.ts' 'services/agent-host/src/**/*.ts' '*.md' 'docs/**/*.md' && cargo fmt --manifest-path src-tauri/Cargo.toml -- --check"
  },
  "license": "MIT",
  "dependencies": {
    "@mariozechner/pi-coding-agent": "^0.53.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-store": "^2",
    "dompurify": "^3.2.7",
    "highlight.js": "^11.11.1",
    "highlightjs-svelte": "^1.0.6",
    "marked": "^15.0.12",
    "marked-highlight": "^2.2.2"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2",
    "clsx": "^2.1.1",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.6",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
