{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "graphone",
  "version": "0.1.7",
  "identifier": "com.prinova.graphone",
  "build": {
    "beforeDevCommand": "npm --prefix apps/desktop/web run dev --",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm --prefix apps/desktop/web run build",
    "frontendDist": "../apps/desktop/web/build"
  },
  "app": {
    "windows": [
      {
        "title": "Graphone",
        "width": 1024,
        "height": 768,
        "theme": "Dark",
        "transparent": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/pi-agent"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
